<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seymur.azercell2.fragments.VAS.CallBarring">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/CallBarring"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/allIncoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:text="@string/AllIncoming"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/incomingCalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/incomingSMS"
            android:layout_alignBottom="@+id/incomingSMS"
            android:layout_toLeftOf="@+id/allIncoming"
            android:layout_toStartOf="@+id/allIncoming"
            android:text="@string/Calls" />

        <CheckBox
            android:id="@+id/incomingSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allIncoming"
            android:layout_toEndOf="@+id/allIncoming"
            android:layout_toRightOf="@+id/allIncoming"
            android:text="@string/sms" />

        <TextView
            android:id="@+id/allOutgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/incomingCalls"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/incomingCalls"
            android:layout_toRightOf="@+id/incomingCalls"
            android:text="@string/AllOutgoing"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/outgoingCalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allOutgoing"
            android:layout_toLeftOf="@+id/allOutgoing"
            android:layout_toStartOf="@+id/allOutgoing"
            android:text="@string/Calls" />

        <CheckBox
            android:id="@+id/outgoingSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allOutgoing"
            android:layout_toEndOf="@+id/allOutgoing"
            android:layout_toRightOf="@+id/allOutgoing"
            android:text="@string/sms" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/CallBarringDesc" />

        <EditText
            android:id="@+id/passwordCallBarring"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView32"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/byDefault0000"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView28"
            android:layout_alignRight="@+id/textView28"
            android:layout_below="@+id/outgoingCalls"
            android:layout_marginTop="40dp"
            android:text="@string/setYourBarringCode" />

        <Button
            android:id="@+id/deactivateCallBarring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activateCallBarring"
            android:layout_alignBottom="@+id/activateCallBarring"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/activateCallBarring"
            android:layout_toRightOf="@+id/activateCallBarring"
            android:background="@drawable/button"
            android:elevation="0dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/deaktive" />

        <Button
            android:id="@+id/activateCallBarring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/outgoingCalls"
            android:layout_alignStart="@+id/outgoingCalls"
            android:layout_below="@+id/passwordCallBarring"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:text="@string/Activate" />

    </RelativeLayout>

</FrameLayout>
