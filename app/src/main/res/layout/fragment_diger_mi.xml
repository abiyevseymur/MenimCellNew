<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.seymur.azercell2.fragments.DigerMIP">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/limitsizMip"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="290dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:background="@drawable/buttonpink"
                        android:text="@string/derhalQosulma"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center_vertical"
                        android:text="UNLIMITED HOUR PACKS"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </GridLayout>

                <GridLayout
                    android:layout_width="290dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:elevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center_vertical"
                        android:text=" UNLIMITED WEEKEND PACK"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:background="@drawable/buttonpink"
                        android:text="@string/derhalQosulma"
                        android:textSize="18sp" />

                </GridLayout>

                <GridLayout
                    android:layout_width="290dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:elevation="0dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:background="@drawable/buttonpink"
                        android:text="@string/derhalQosulma"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="82dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center_vertical"
                        android:text="UNLIMITED NIGHT PACK"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </GridLayout>
            </LinearLayout>

        </LinearLayout>

</FrameLayout>
