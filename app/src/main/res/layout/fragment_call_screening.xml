<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seymur.azercell2.fragments.VAS.CallScreening">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/numberBlackList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:gravity="center"
            android:hint="050/051 ******"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="@string/CallScreening"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/AddBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/numberBlackList"
            android:layout_alignStart="@+id/numberBlackList"
            android:layout_below="@+id/numberBlackList"
            android:layout_marginTop="18dp"
            android:background="@drawable/button"
            android:text="Add" />

        <Button
            android:id="@+id/RemoveBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/numberBlackList"
            android:layout_alignRight="@+id/numberBlackList"
            android:layout_alignTop="@+id/AddBL"
            android:background="@drawable/button"
            android:text="Remove" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/BlackListDesc" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkTheNumbersBL"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/mayAddmax3N" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="49dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/willstored30days" />

        <TextView
            android:id="@+id/checkTheNumbersBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView35"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/CheckTheNumberBlackList"
            android:textColor="@color/pinkAcces"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView30"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/RemoveBL"
            android:layout_toStartOf="@+id/RemoveBL"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/toAddOneNtoBL" />

        <TextView
            android:id="@+id/priceOifBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/numberBlackList"
            android:layout_alignRight="@+id/numberBlackList"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="0.24" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/priceOifBL"
            android:layout_alignEnd="@+id/checkTheNumbersBL"
            android:layout_alignRight="@+id/checkTheNumbersBL"
            android:text="@string/azn" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="9dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/toRmvOrChNFromBL" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/priceOifBL"
            android:layout_alignStart="@+id/priceOifBL"
            android:layout_alignTop="@+id/textView19"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="0.01" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:layout_alignTop="@+id/textView37"
            android:text="@string/azn" />
    </RelativeLayout>
</FrameLayout>
