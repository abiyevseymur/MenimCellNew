<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.seymur.azercell2.fragments.ServicesVAS">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/callForwardMain"
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.84"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/callForward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.07"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/call_forward" android:contentDescription="TODO" />

                    <Button
                        android:id="@+id/callForwardBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="@string/callForwarding"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CallBarring"
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/CallBarringPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.10"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/call_barring" />

                    <Button
                        android:id="@+id/callBarringBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="call Barring"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/CallScreening"
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.84"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/callScreeningPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.07"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/call_screening" android:contentDescription="TODO"/>

                    <Button
                        android:id="@+id/callScreeningBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="@string/callScreening"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/callScreeningPlus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.10"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/call_screeningplus" android:contentDescription="TODO"/>

                    <Button
                        android:id="@+id/callScreeningPlusBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="@string/callScreeningPlus"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.84"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/gizlicell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.07"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/gizlicell" />

                    <Button
                        android:id="@+id/gizlicellBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="@string/gizlicellGizletcell"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/roamingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1.11"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ConfirenceCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.10"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/give_report" />

                    <Button
                        android:id="@+id/ConfirenceCallBtn"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:text="Roaming"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
